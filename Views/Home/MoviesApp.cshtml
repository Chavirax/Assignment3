
@{
    ViewData["Title"] = "MovieApp";
}

@model Assignment3.Models.ApplicationResponse

<h1>MovieApp</h1>
<br />
<br />
<h3>Enter a movie</h3>
<br />
<!--Form for the movie application:-->
<form asp-action="MoviesApp" method="post">
    <div>
        <label asp-for="Category">Category</label>
        <input id="Category" asp-for="Category" required/><!--required field-->
    </div>
    <div>
        <label asp-for="Title">Title</label>
        <input id="Title" asp-for="Title" required/><!--Required field-->
    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input id="Title" asp-for="Year" required /><!--Required field-->
    </div>
    <div>
        <label asp-for="Director">Director</label>
        <input id="Title" asp-for="Director" required /><!--Required field-->
    </div>
    <div>
        <label asp-for="Rating">Rating</label><!--Required field-->
        <select asp-for="Rating" required>
            <option value="">Choose One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="">Choose One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="LentTo">Lent To</label>
        <input id="LentTo" asp-for="LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes</label>
        <input id="Notes" asp-for="Notes" maxlength="25" /> <!--This is limiting the notes to only be 25 characters-->
    </div>
    <br />
    <button type="submit">Submit</button>
    <div asp-validation-summary="All"></div> <!--Displays the error messages if the inputs are invalid-->
</form>

